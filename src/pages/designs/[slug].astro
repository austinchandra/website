---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import PageHeader from '../../components/PageHeader.astro';
import ProductControls from '../../components/ProductControls.astro';
import { bases, products } from '../../data/products';

export function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const base = bases[product.base];
// Load all images using static path and cache across page loads.
const images = import.meta.glob<{ default: ImageMetadata }>('../../assets/designs/product/*.jpeg', { eager: true });
---

<Layout title={product.title} description={`${product.title} — ${base.name}`}>
  <div class="product-container" data-slug={product.slug}>
    <div class="product-image-section">
      <div class="product-image-wrapper">
        <Image src={images[`../../assets/designs/product/${product.slug}.jpeg`]?.default} alt={product.title} class="product-image" />
      </div>
      {product.adjusted && <p class="image-caption">Design is slightly larger than pictured.</p>}
    </div>
    <div class="product-info">
      <PageHeader title={product.title} />
      <p>{base.name} — <i>{base.price}</i></p>
      <p class="product-description">{product.description}</p>
      <ProductControls quantity={1} size="M" />
      <Button paddingX={18} class="add-button">Add</Button>
      <p class="model-info">The model is a slim 5'8" and wears a M. His brother, a sturdy 5'11", prefers the L, and his friend, a well-built 6'1", likes the XL.</p>
    </div>
  </div>
</Layout>

<script>
  import { addToCart, cartStore } from '../../lib/cart';
  import { MAX_QUANTITY } from '../../data/products';

  const ADDED_CLASS = 'passive';
  const ADDED_ALL_CLASS = 'added-all';

  const container = document.querySelector('.product-container') as HTMLElement;
  const button = document.querySelector('.add-button') as HTMLButtonElement;
  const selects = document.querySelectorAll<HTMLSelectElement>('.product-controls select');
  const quantitySelect = selects[0];
  const sizeSelect = selects[1];

  const slug = container.dataset.slug!;

  function updateControls() {
    const existing = cartStore.get().find((i) => i.slug === slug && i.size === sizeSelect.value);
    const remaining = MAX_QUANTITY - (existing?.quantity ?? 0);
    const currentQty = Number(quantitySelect.value) || 1;

    quantitySelect.innerHTML = '';
    for (let n = 1; n <= remaining; n++) {
      const option = document.createElement('option');
      option.value = String(n);
      option.textContent = String(n);
      option.selected = n === Math.min(currentQty, remaining);
      quantitySelect.appendChild(option);
    }
    if (remaining <= 0) {
      const placeholder = document.createElement('option');
      placeholder.value = '0';
      placeholder.textContent = '0';
      quantitySelect.appendChild(placeholder);
    }
    quantitySelect.disabled = remaining <= 0;

    if (remaining <= 0) {
      button.textContent = 'Added All';
      button.classList.add(ADDED_CLASS);
      button.classList.add(ADDED_ALL_CLASS);
    } else if (button.classList.contains(ADDED_ALL_CLASS)) {
      button.textContent = 'Add';
      button.classList.remove(ADDED_CLASS);
      button.classList.remove(ADDED_ALL_CLASS);
    }
  }

  cartStore.subscribe(updateControls);
  sizeSelect.addEventListener('change', updateControls);

  button.addEventListener('click', () => {
    if (button.classList.contains(ADDED_CLASS)) return;
    addToCart({
      slug,
      quantity: Number(quantitySelect.value),
      size: sizeSelect.value,
    });
    if (!button.classList.contains(ADDED_ALL_CLASS)) {
      button.textContent = 'Added';
      button.classList.add(ADDED_CLASS);
      setTimeout(() => {
        if (!button.classList.contains(ADDED_ALL_CLASS)) {
          button.textContent = 'Add';
          button.classList.remove(ADDED_CLASS);
        }
      }, 2000);
    }
  });
</script>

<style>
  :root {
    --product-image: 72.37vw;
  }

  @media (min-width: 768px) {
    :root { --product-image: 38.20vw; }
  }

  @media (min-width: 1536px) {
    :root { --product-image: 19.09vw; }
  }

  .product-container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .product-image-wrapper {
    width: var(--product-image);
    aspect-ratio: 3 / 4;
  }

  .product-image {
    width: var(--product-image);
    height: auto;
  }

  .image-caption {
    margin-top: 12px;
    width: var(--product-image);
    font-style: italic;
  }

  @media (min-width: 1536px) {
    .product-container {
      flex-direction: row;
      gap: calc(var(--product-image) / var(--phi) / var(--phi));
    }
  }

  .product-description {
    margin-top: 24px;
    margin-bottom: 48px;
    white-space: pre-line;
  }

  :global(.add-button) {
    margin-top: 24px;
  }

  .model-info {
    margin-top: 48px;
  }
</style>
