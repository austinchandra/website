---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import ProductControls from '../../components/ProductControls.astro';
import { bases, products } from '../../data/products';

export function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const base = bases[product.base];
const { default: productImage } = await import(`../../assets/designs/product/${product.slug}.jpeg`);
---

<Layout title={product.title} description={`${product.title} — ${base.name}`}>
  <div class="product-container">
    <Image src={productImage} alt={product.title} class="product-image" />
    <div class="product-info">
      <h2>{product.title}</h2>
      <p>{base.name} — <i>{base.price}</i></p>
      <p class="product-description">{product.description}</p>
      <ProductControls quantity={1} size="M" />
      <Button paddingX={18} class="add-button">Add</Button>
      <p class="model-info">The model is a slim 5'8" and wears a M. His brother, a sturdy 5'11", prefers the L, and his friend, a well-built 6'1", likes the XL.</p>
    </div>
  </div>
</Layout>

<style>
  :root {
    --product-image: 72.37vw;
  }

  @media (min-width: 768px) {
    :root { --product-image: 38.20vw; }
  }

  @media (min-width: 1536px) {
    :root { --product-image: 19.09vw; }
  }

  .product-container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .product-image {
    width: var(--product-image);
    height: auto;
    background: #eee;
  }

  @media (min-width: 1536px) {
    .product-container {
      flex-direction: row;
      gap: calc(var(--product-image) / var(--phi) / var(--phi));
    }
  }

  .product-info h2 {
    margin-top: 0;
  }

  .product-description {
    margin-top: 24px;
    margin-bottom: 48px;
    white-space: pre-line;
  }

  :global(.add-button) {
    margin-top: 24px;
  }

  .model-info {
    margin-top: 48px;
  }
</style>
