---
const { quantity, size } = Astro.props;
---

<div class="product-controls">
  <button>{quantity}</button>
  <span>x</span>
  <button>{size}</button>
</div>

<style>
  .product-controls {
    display: flex;
    flex-direction: row;
    gap: 12px;
  }

  .product-controls button {
    background: none;
    border: none;
    padding: 0;
    font: inherit;
    font-weight: 500;
    color: inherit;
    cursor: pointer;
    text-decoration: underline;
  }
</style>
