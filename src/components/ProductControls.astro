---
import { SIZES, QUANTITIES } from '../data/products';
const { quantity, size, showRemove } = Astro.props;
---

<div class="product-controls">
  <select value={quantity}>
    {showRemove && <option value="0">0</option>}
    {QUANTITIES.map((n) => <option value={n} selected={n === quantity}>{n}</option>)}
  </select>
  <span>x</span>
  <select value={size}>
    {SIZES.map((s) => <option value={s} selected={s === size}>{s}</option>)}
  </select>
</div>

<style>
  .product-controls {
    display: flex;
    flex-direction: row;
    gap: 12px;
    align-items: center;
  }

  .product-controls select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background: none;
    border: none;
    border-radius: 0;
    padding: 8px 12px;
    margin: -8px -12px;
    font: inherit;
    font-weight: 500;
    color: inherit;
    cursor: pointer;
    text-decoration: underline;
    outline: none;
  }
</style>
