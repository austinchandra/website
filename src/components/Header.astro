---
import Button from './Button.astro';

const pathname = Astro.url.pathname === '/' ? '/' : Astro.url.pathname.replace(/\/$/, '');

const links = [
  { label: "Home", href: "/" },
  { label: "Writings", href: "/writings" },
  { label: "Designs", href: "/designs" },
];
---

<header>
  <nav>
    {links.map((link) => (
      <a href={link.href} class={pathname === link.href ? "active" : ""}>
        {link.label}
      </a>
    ))}
  </nav>
  <Button href="/cart" paddingX={12} class={pathname === "/cart" ? "cart active" : "cart"}>0</Button>
</header>

<style>
  header {
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav {
    display: flex;
    gap: 24px;
  }

  a {
    font-size: 21px;
    font-weight: 500;
    text-decoration: none;
    color: inherit;
  }

  a.active {
    text-decoration: underline;
  }

  :global(.cart) {
    font-size: 21px;
    font-weight: bold;
  }

  :global(.cart.active) {
    text-decoration: underline;
  }
</style>
