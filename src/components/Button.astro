---
const { paddingX = 12, href, disabled, hidden, class: className } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element href={disabled ? undefined : href} disabled={disabled} class:list={["button", className, { disabled }]} style={`padding: 4px ${paddingX}px;${hidden ? ' visibility: hidden;' : ''}`}>
  <slot />
</Element>

<style>
  .button {
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    border-radius: 4px;
    font: inherit;
    cursor: pointer;
    text-decoration: none;
  }

  .button.disabled {
    background: var(--color-disabled);
    cursor: default;
  }
</style>
