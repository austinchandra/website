---
import Header from '../components/Header.astro';

const { title = "AC", description, footerLink } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <style>
      :root {
        --phi:   1.618;
        --phi-2: calc(var(--phi) * var(--phi));
        --phi-3: calc(var(--phi-2) * var(--phi));
        --phi-4: calc(var(--phi-3) * var(--phi));
        --phi-5: calc(var(--phi-4) * var(--phi));

        --color-bg: #fdfdfd;
        --color-text: #080808;
        --color-disabled: #aaa;

        /* Use to Cover Rounding */
        --vw-padding: 0.01vw;

        /* The Base "Top" Margin */
        --margin-base: 6.53vw;
      }

      body {
        font-family: "Helvetica Neue", Arial, sans-serif;
        font-size: 17px;
        line-height: 1.5;
        background-color: var(--color-bg);
        color: var(--color-text);
      }

      .header-spacer {
        margin-bottom: 40px;
      }

      /* Top : Left : Right in Golden Ratio */
      /* Width : Left in Golden Ratio^4 */
      main {
        margin-top:   var(--margin-base);
        margin-left:  calc(var(--margin-base) * var(--phi));
        margin-right: calc(var(--margin-base) * var(--phi-2));
        width:        calc(var(--margin-base) * var(--phi-5));
      }

      .site-footer {
        margin-top: var(--showcase-gap);
      }

      .site-footer a {
        text-decoration: underline;
        color: inherit;
      }

      /* Top : Left : Right in Golden Ratio */
      /* Width : Left in Golden Ratio^3 */
      @media (min-width: 768px) {
        :root { --margin-base: 9.02vw; }
        main  { width: calc(var(--margin-base) * var(--phi-4)); }
      }

      /* Top : Left : Right : Width in Golden Ratio */
      /* Width : Left in Golden Ratio^2 */
      @media (min-width: 1024px) {
        :root { --margin-base: 11.80vw; }
        main  { width: calc(var(--margin-base) * var(--phi-3)); }
      }
    </style>
  </head>
  <body>
    <main>
      <div class="header-spacer">
        <Header />
      </div>
      <slot />
      {footerLink && (
        <footer class="site-footer">
          <a href={footerLink.href}>{footerLink.label}</a>
        </footer>
      )}
    </main>
  </body>
</html>
